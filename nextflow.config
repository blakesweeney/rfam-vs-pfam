profiles {
  standard {
    params {
      containers { 
        plot = '' 
        analysis = ''
      }
    }
  }

  lsf {
    params {
      containers {
        plot = 'docker://bsweeneyebi/rfam-pfam-plot'
        analysis = 'docker://bsweeneyebi/rfam-pfam-analysis'
      }
    }

    process {
      executor = 'lsf'
      maxForks = 2000
      queue = 'short'
    }

    singularity {
      enabled = true
      cacheDir = "$baseDir/singularity"
    }

    executor {
      $lsf {
        queueSize = 10000
        submitRateLimit = '1sec'
      }
    }
  }
}
